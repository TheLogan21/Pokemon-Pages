---
const links = [
    { href: "/", text: "Listado" },
    { href: "/pokemons/1", text: "Paginado" },
    { href: "/Favorite", text: "Favoritos" },
];

const currenteUrl = Astro.url.pathname;
---

<nav class="bg-white shadow dark:bg-gray-800">
    <div
        class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
    >
        {
            links.map(({ href, text }) => (
                <div>
                    <a
                        href={href}
                        class="text-gray-800 dark:text-gray-200  mx-1.5 sm:mx-6"
                    >
                        {text}
                    </a>
                    {currenteUrl == href ? (
                        <div
                            transition:name="Link-path"
                            class="border-b-2 border-blue-500 mx-4"
                        />
                    ) : (
                        <div class="border-b-2 border-transparent" />
                    )}
                </div>
            ))
        }
    </div>
</nav>
